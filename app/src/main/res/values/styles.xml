<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button_Frame_Gold">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Round_Button_Frame_Gold">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/custom_round_button_background</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">"+"</item>
    </style>

    <style name="TextViewFontColor">
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="Montserrat_Font">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
