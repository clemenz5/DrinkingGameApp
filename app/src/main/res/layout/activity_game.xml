<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.GameActivity"
    android:background="#198050">

    <TextView
        android:id="@+id/game_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Spieler"/>

    <TextView
        android:id="@+id/game_question"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Frage"/>

    <Button
        android:id="@+id/game_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nÃ¤chstes"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="#00000000"/>

    <Button
        android:id="@+id/game_prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="letztes"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="#00000000"/>



</RelativeLayout>